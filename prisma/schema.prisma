generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model LatLngToProcess {
    id          String @id @default(cuid())
    lat         Float
    lng         Float
    /// 'pending' 'processed'
    status      String 
    created_at   DateTime @default(now())
    updated_at   DateTime @updatedAt
    @@unique([lat, lng], name: "OnlyUniquePoints")
}

model Place {
    id              String @id @default(cuid())
    /// 'pending'
    status          String
    wiki_url        String
    lat             Float
    lng             Float
    info            Json
    content         Json
    main_image      String
    images          String[]
    categories      String[]
    references      String[]
    @@unique([lat, lng], name: "OnlyUniquePlaces")

}
